{
  "name": "drill-infinite-threads",
  "version": "0.1.0",
  "private": true,
  "description": "Express + TypeScript API using MongoDB for posts and nested comments in a single collection.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
  "build": "tsc -p tsconfig.json",
  "build:web": "cd web && npm run build",
  "build:server": "tsc -p tsconfig.json",
  "build:all": "npm run build:web && npm run build:server",
  "start": "node dist/index.js",
  "test": "vitest run",
  "test:watch": "vitest"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
  "mongodb": "^6.8.0",
  "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
  "@types/cors": "^2.8.17",
  "@types/supertest": "^2.0.16",
  "mongodb-memory-server": "^10.1.4",
  "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
  "typescript": "^5.5.4",
  "vitest": "^2.0.5"
  }
}
